  "description": "ROD Panel",
  "type": "project",
  "time": "2020-09-27",
  "keywords": [
    "rod",
    "pzd"
  ],
  "config": {
    "optimize-autoloader": true
  },
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "ext-pdo": "*",
    "nette/application": "^3.0",
    "nette/bootstrap": "^3.0",
    "nette/caching": "^3.0",
    "nette/database": "^3.0",
    "nette/di": "^3.0",
    "nette/finder": "^2.5",
    "nette/forms": "^3.0",
    "nette/http": "^3.0",
    "nette/mail": "^3.0",
    "nette/robot-loader": "^3.0",
    "nette/security": "^3.0",
    "nette/utils": "^3.0",
    "latte/latte": "^2.5",
    "tracy/tracy": "^2.6",
    "mrcnpdlk/pixie": "^5",
    "mrcnpdlk/lib-exception": "^0",
    "json-mapper/json-mapper": "^1"
  },
  "require-dev": {
    "phpunit/php-code-coverage": "^7",
    "friendsofphp/php-cs-fixer": "^2",
    "phpstan/phpstan": "^0",
    "phpstan/phpstan-phpunit": "^0",
    "phpstan/phpstan-nette": "^0",
    "jangregor/phpstan-prophecy": "^0",
    "phpunit/phpunit": "^8",
    "nette/tester": "^2.0",
    "symfony/thanks": "^1"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Mrcnpdlk\\ROD\\App\\": "app/"
    }
  },
  "scripts": {
    "test": [
      "@phpstan",
      "@lint"
    ],
    "phpstan": "phpstan analyse --memory-limit=2G --error-format=table",
    "fixer": "php-cs-fixer fix --diff --show-progress=dots",
    "lint": "php-cs-fixer fix --diff --dry-run"
  }
}

